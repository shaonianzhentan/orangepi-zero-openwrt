# 目标设备与镜像（保持不变）
CONFIG_TARGET_sunxi=y
CONFIG_TARGET_sunxi_cortexa7=y
CONFIG_TARGET_DEVICE_sunxi_cortexa7_DEVICE_orangepi_zero=y
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_TARGET_ROOTFS_INITRAMFS=n

# 强制关闭 PPP 及拨号相关（关键修正）
CONFIG_PACKAGE_ppp=n
CONFIG_PACKAGE_ppp-mod-pppoe=n
CONFIG_PACKAGE_kmod-ppp=n
CONFIG_PACKAGE_kmod-pppox=n
CONFIG_PACKAGE_kmod-pppoe=n

# DNS 配置（解决冲突）
CONFIG_PACKAGE_dnsmasq=n
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_dnsmasq-full_auth=y
CONFIG_PACKAGE_dnsmasq-full_conntrack=y
CONFIG_PACKAGE_dnsmasq-full_dhcp=y
CONFIG_PACKAGE_dnsmasq-full_dnssec=y

# 网口驱动（确保适配）
CONFIG_PACKAGE_kmod-sun4i-emac=y
CONFIG_PACKAGE_kmod-rtl8211e=y

# 网络工具（保持不变，确保 OpenClash 依赖）
CONFIG_PACKAGE_ip-full=y
CONFIG_PACKAGE_ipset=y
CONFIG_PACKAGE_iptables-mod-tproxy=y
CONFIG_PACKAGE_iptables-mod-extra=y
CONFIG_PACKAGE_kmod-ipt-nat=y
CONFIG_PACKAGE_kmod-ipt-ipset=y
CONFIG_PACKAGE_kmod-tproxy=y
CONFIG_PACKAGE_resolvconf=y

# OpenClash 及依赖（保持不变）
CONFIG_PACKAGE_luci-app-openclash=y
CONFIG_PACKAGE_openclash_core_lite=y
CONFIG_PACKAGE_libustream-openssl=y
CONFIG_PACKAGE_coreutils-base64=y

# 禁用冗余组件（新增）
CONFIG_PACKAGE_kmod-nftables=n
CONFIG_DISABLE_NFTABLES=y
CONFIG_PACKAGE_wireguard-tools=n
CONFIG_PACKAGE_openvpn=n